{
    "compilerOptions": {
        "module": "es2022",
        "moduleResolution": "node",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strict": true,
        "target": "es2015",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "paths": {
            "*": ["node_modules/*"]
        }
    },
    "exclude": ["node_modules", "aurora", "dist"],
    "include": ["src", "test", "typings"]
}
